<!DOCTYPE html>
<html>
<head>
  <title>Fandangr</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav>
    <div id="navbar">
      <ul>
        <li id="home" class="navbar_buttons">
          <a href="/">Home</a>
        </li>
        <% if current_user %>
        <li class="navbar_buttons">
          <%= link_to "Log Out", logout_path %>
        </li>
        <li id="logged_in" class="navbar_buttons">
          Logged in as <%= current_user.username %>
        </li>
        <% else %>
        <li class="navbar_buttons">
          <%= link_to "Sign-Up", login_path %>
        </li>
        <li class="navbar_buttons">
          <%= link_to "Log-In", login_path %>
        </li>
        <% end %>
<!--         <li id="admin" class="navbar_buttons">
          Admin
        </li> -->
      </ul>
    </div>
  </nav>



<%= yield %>

</body>
</html>
